    <link rel="stylesheet" type="text/css" href="/assets/css/main.css" />

    <!-- Site meta data -->
    <meta name="description" content="<%= siteDesc %>" />
  </head>

  <body class="flex items-center h-full py-12 mb-0 bg-priamry-400">
    <div class="w-1/2 p-6 m-auto bg-gray-400 rounded-md shadow-md">
      <div class="mb-4 text-center branding">
        <h1 class="text-2xl font-medium leading-10 align-middle">
          <%= siteTitle %>
        </h1>
      </div>
      <a
        href="/auth/spotify"
        class="block w-full p-2 my-3 text-xl font-medium text-center text-white no-underline bg-green-500 border-8 border-transparent hover:text-white hover:bg-green-400"
